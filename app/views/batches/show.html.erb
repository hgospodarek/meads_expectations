<div class="container">
  <div class="row">
    <h2 class="amber-text center"><%= @batch.name %></h2>
    <div class="batch-recipe s12 m6 col">
      <h3 class="center">Recipe: <%= @batch.recipe.title %></h3>
      <h4 class="center"><%= @batch.recipe.sweetness %> <%= @batch.recipe.variety %></h3>

        <% if !@batch.recipe.ingredients.empty? %>
        <h4 class="center">Ingredients</h4>
        <ul>
          <% @batch.recipe.ingredients.each do |ingredient| %>
          <li class="center"><%= ingredient.amount %> <%= ingredient.unit %> <%= ingredient.name %></li>
          <% end %>
        </ul>
        <% else %>
        <h4 class="center">This batch's recipe does not list any ingredients</h4>
        <% end %>

        <% if !@batch.recipe.steps.empty? %>
        <h4 class="center">Steps</h4>
        <ol>
          <% @batch.recipe.steps.each do |step| %>
          <li><%= step.action %> </li>
          <% end %>
        </ol>
        <% else %>
        <h4 class="center">This batch's recipe does not list any steps</h4>
        <% end %>
      </div>
      <div class="s12 m6 col">
        <h3 class=center>Batch</h3>
        <div id="batch-info" class="<%= @batch.id %>"></div>
        <%= link_to 'Delete Batch', batch_path(@batch), data: { confirm: "Are you sure?" }, method: :delete, class: "waves-effect waves-light btn" %>
      </div>
    </div>
</div>
